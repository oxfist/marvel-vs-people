<table class="table table-sm mb-5">
  <thead class="thead-dark">
    <tr>
      <th class="px-3">#</th>
      <th colspan="1"></th>
      <th>Winner</th>
      <th>Date</th>
    </tr>
  </thead>
  <% @rounds.each do |round| %>
    <thead>
      <tr class="table-active">
        <th></th>
        <th>
          <% match_count = round.matches.count %>
          Round #<%= round.id %>
          (<%= "#{match_count} match#{'es' if match_count > 1}" %>)
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% round.matches.each do |match| %>
        <tr>
          <td class="px-3"><%= i += 1 %></td>
          <td><%= match.person.name %> vs. <%= match.superhero.name %></td>
          <td>
            <%= match.person_won? ? match.person.name : match.superhero.name %>
          </td>
          <td><%= match.created_at.strftime('%H:%M hrs. %d-%m-%Y') %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
